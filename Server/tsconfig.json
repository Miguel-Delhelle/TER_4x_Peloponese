{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "paths": {
        "@Common/*": ["../Common/src/*"]
      },
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "esModuleInterop":true,
      "resolveJsonModule": true
   }
}